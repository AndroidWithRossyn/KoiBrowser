<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accentGreen</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="AppThemeDown.AlertDialog" parent="AppThemeDown">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/light_transparent_dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/light_transparent</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>

    </style>

    <style name="AppThemeDown" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:actionModeBackground">@android:color/white</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow_left</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="shapeAppearanceLargeComponent">@style/LargeComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/MediumComponent</item>
        <item name="shapeAppearanceSmallComponent">@style/SmallComponent</item>
        <item name="actionModeStyle">@style/CustomActionModeStyle</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionModeCutDrawable">@color/colorDarkGray</item>
        <item name="actionModeCopyDrawable">@color/colorDarkGray</item>
        <item name="actionModePasteDrawable">@color/colorDarkGray</item>

    </style>

    <style name="application_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:popupMenuStyle">@style/popup_window_style</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorControlActivated">@color/color_primary_dark</item>
        <item name="colorControlHighlight">@color/black_lighter</item>
        <item name="dialogRoundRipple">@drawable/default_round_ripple</item>
        <item name="dialogRectRipple">@drawable/default_rect_ripple</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="shapeAppearanceLargeComponent">@style/LargeComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/MediumComponent</item>
        <item name="shapeAppearanceSmallComponent">@style/SmallComponent</item>
        <item name="colorThread">@color/blue</item>
        <item name="md_positive_color">?colorThread</item>
        <item name="md_btn_ripple_color">@color/btn_dialog_ripple</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="popup_window_style" parent="@android:style/Widget.PopupMenu">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>
    <style name="application_theme.Light" parent="@style/application_theme">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black_light</item>
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlHighlight">@color/black_lighter</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="application_theme.dark" parent="@style/application_theme">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/blackColorPrimary</item>
        <item name="colorPrimaryDark">@color/blackColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black_light</item>
        <item name="colorControlActivated">@color/black_light</item>
        <item name="colorControlHighlight">@color/black_lighter</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorThread">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
    </style>
    <style name="DialogAnimation" parent="">
        <item name="android:windowEnterAnimation">@anim/bounce_effect_enter</item>
        <item name="android:windowExitAnimation">@anim/bounce_effect_out</item>
    </style>

    <style name="AppTheme.Ads">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">13px</item>
        <item name="android:minHeight">13px</item>
        <item name="android:text">Ad</item>
    </style>
    <style name="askBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="MyAutoCompleteTextView" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:dropDownSelector">@null</item>
        <item name="android:popupBackground">@android:color/transparent</item>



    </style>
    <style name="AppThemeDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accentGreen</item>

    </style>




    <style name="LargeComponent" parent="@style/ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="PreferenceThemeOverlay" parent="">
        <item name="android:scrollbars">vertical</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference.Material</item>
        <item name="dialogPreferenceStyle">@style/Preference.DialogPreference.Material</item>
        <item name="dropdownPreferenceStyle">@style/Preference.DropDown.Material</item>
        <item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference.Material</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category.Material</item>
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceFragmentListStyle">@style/PreferenceFragmentList.Material</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Material</item>
        <item name="preferenceScreenStyle">@style/Preference.PreferenceScreen.Material</item>
        <item name="preferenceStyle">@style/Preference.Material</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material</item>
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat.Material</item>
        <item name="switchPreferenceStyle">@style/Preference.SwitchPreference.Material</item>
    </style>

    <style name="CustomActionModeStyle" parent="@style/Base.Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/CustomActionModeTextStyle</item>


    </style>
    <style name="CustomActionModeTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

    <style name="MediumComponent" parent="@style/ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="SmallComponent" parent="@style/ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="textsizetoolbar">
        <item name="android:textSize">@dimen/text_size13</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="AppTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
    </style>

    <style name="Alert.Button.Negative" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="strokeColor">#d1d1d1</item>
    </style>
    <style name="Alert.Button.Positive" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>


    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size12</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="LayoutMiddle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="HeaderLayoutBase" parent="@style/MatchWrap">
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:minHeight">@dimen/buttons_minheight</item>
    </style>
    <style name="MatchWrap" parent="@style/Match">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Match" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="DialogTitle" parent="@style/ToolTitle">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ToolTitle" parent="@style/TextBase">
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="TextBase" parent="@style/Wrap">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="Wrap" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ImageButton" parent="">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>


    </style>

    <style name="CustomShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>