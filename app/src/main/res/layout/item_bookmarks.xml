<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
       android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/icBookmarks2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleBookmarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="Google"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_size13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/uriBookmarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="www.google.com"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#909090"
                    android:textSize="@dimen/text_size10" />

                <TextView
                    android:id="@+id/timeBookmarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#909090"
                    android:textSize="@dimen/text_size9" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/icBookmarks2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="6dp"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>
